<div class="pb-10">
  <!--begin::Heading-->
  <h1 class="anchor fw-bold mb-5" id="slice" data-kt-scroll-offset="100">
    <a href="#slice"></a>slice
  </h1>
  <!--end::Heading-->
  <!--begin::Block-->
  <div class="py-5">Extract a portion of a string.</div>
  <!--end::Block-->
  <!--begin::Block-->
  <div class="my-5">
    <!--begin::Heading-->
    <h5 class="py-2 mb-0">Parameters:</h5>
    <!--end::Heading-->
    <!--begin::Parameters-->
    <ul>
      <li class="py-2"><code>val: string</code>
        <!--begin::Block-->
        <div class="pt-3">
          Target string.
        </div>
        <!--end::Block-->
      </li>
      <li class="py-2"><code>start: number</code>
        <!--begin::Block-->
        <div class="pt-3">
          The zero-based index at which to begin extraction.
        </div>
        <!--end::Block-->
      </li>
      <li class="py-2"><code>end: number</code>
        <!--begin::Block-->
        <div class="pt-3">
          The zero-based index before which to end extraction. The character at this index will not be included.
        </div>
        <!--end::Block-->
      </li>
    </ul>
    <!--end::Parameters-->
    <!--begin::Highlight-->
    <div class="highlight">
      <button class="highlight-copy btn" data-bs-toggle="tooltip" title="Copy code">copy</button>
      <div class="highlight-code">
        <pre class="language-javascript">
          <code class="language-javascript">// results in: Just
hbs.compile(&quot;\{{slice str 0 4}}&quot;)({&quot;str&quot;:&quot;Just Wow&quot;});

// results in: Wow
hbs.compile(&quot;\{{slice str 5}}&quot;)({&quot;str&quot;:&quot;Just Wow&quot;});

// results in:  Wow
hbs.compile(&quot;\{{slice str -4}}&quot;)({&quot;str&quot;:&quot;Just Wow&quot;});</code>
        </pre>
      </div>
    </div>
    <!--end::Highlight-->
  </div>
  <!--end::Block-->
</div>
