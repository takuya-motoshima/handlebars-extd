<div class="pb-10">
  <!--begin::Heading-->
  <h1 class="anchor fw-bold mb-5" id="sprintf" data-kt-scroll-offset="100">
    <a href="#sprintf"></a>sprintf
  </h1>
  <!--end::Heading-->
  <!--begin::Block-->
  <div class="py-5">
    Returns a string produced according to the formatting string format.<br>
    It uses sprintf-js internally.<br>
    Check <a href="https://github.com/alexei/sprintf.js" target="_blank">https://github.com/alexei/sprintf.js</a> for more information.
  </div>
  <!--end::Block-->
  <!--begin::Block-->
  <div class="my-5">
    <!--begin::Heading-->
    <h5 class="py-2 mb-0">Parameters:</h5>
    <!--end::Heading-->
    <!--begin::Parameters-->
    <ul>
      <li class="py-2"><code>format: string</code>
        <!--begin::Block-->
        <div class="pt-3">
          Format string.
        </div>
        <!--end::Block-->
      </li>
      <li class="py-2"><code>args: ...any</code>
        <!--begin::Block-->
        <div class="pt-3">
          Any number of parameters/values.
        </div>
        <!--end::Block-->
      </li>
    </ul>
    <!--end::Parameters-->
    <!--begin::Highlight-->
    <div class="highlight">
      <button class="highlight-copy btn" data-bs-toggle="tooltip" title="Copy code">copy</button>
      <div class="highlight-code">
        <pre class="language-javascript">
          <code class="language-javascript">// Argument swapping:
// results in: Hello Dolly!
hbs.compile(&quot;\{{sprintf &#039;%s %s!&#039; str1 str2}}&quot;)({&quot;str1&quot;:&quot;Hello&quot;,&quot;str2&quot;:&quot;Dolly&quot;});

// results in: foo bar 55 baz 20
hbs.compile(&quot;\{{sprintf &#039;%s %s %d %s %d&#039; &#039;foo&#039; &#039;bar&#039; 55 &#039;baz&#039; &#039;20&#039;}}&quot;)();

// Named arguments:
// results in: Hello Dolly
hbs.compile(&quot;\{{sprintf &#039;Hello %(name)s&#039; user}}&quot;)({&quot;user&quot;:{&quot;name&quot;:&quot;Dolly&quot;}});

// results in: Hello Dolly
hbs.compile(&quot;\{{sprintf &#039;Hello %(name)s&#039; name=str}}&quot;)({&quot;str&quot;:&quot;Dolly&quot;});</code>
        </pre>
      </div>
    </div>
    <!--end::Highlight-->
  </div>
  <!--end::Block-->
</div>
