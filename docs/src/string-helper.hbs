  <h1 class="anchor fw-bold mb-5" id="split" data-kt-scroll-offset="100">
    <a href="#split"></a>split
  </h1>
  <!--end::Heading-->
  <!--begin::Block-->
  <div class="py-5">Split a string into an array by the specified characters.</div>
  <!--end::Block-->
  <!--begin::Block-->
  <div class="my-5">
    <!--begin::Heading-->
    <h5 class="py-2 mb-0">Parameters:</h5>
    <!--end::Heading-->
    <!--begin::Parameters-->
    <ul>
      <li class="py-2"><code>val: string</code>
        <!--begin::Block-->
        <div class="pt-3">
          The value to split for.
        </div>
        <!--end::Block-->
      </li>
      <li class="py-2"><code>separator: string</code>
        <!--begin::Block-->
        <div class="pt-3">
          Separator. Default is a comma (&quot;,&quot;).
        </div>
        <!--end::Block-->
      </li>
    </ul>
    <!--end::Parameters-->
    <!--begin::Highlight-->
    <div class="highlight">
      <button class="highlight-copy btn" data-bs-toggle="tooltip" title="Copy code">copy</button>
      <div class="highlight-code">
        <pre class="language-javascript">
          <code class="language-javascript">// results in: [&#039;a&#039;, &#039;b&#039;, &#039;c&#039;]
hbs.compile(&quot;\{{split list}}&quot;)({&quot;list&quot;:&quot;a,b,c&quot;});

// results in: &lt;ul&gt;
//           &lt;li&gt;a&lt;/li&gt;
//           &lt;li&gt;b&lt;/li&gt;
//           &lt;li&gt;c&lt;/li&gt;
//         &lt;/ul&gt;
hbs.compile(`&lt;ul&gt;
              \{{#each (split list &#039;,&#039;)}}
                &lt;li&gt;\{{this}}&lt;/li&gt;
              \{{/each}}
            &lt;/ul&gt;`)({&quot;list&quot;:&quot;a,b,c&quot;});</code>
        </pre>
      </div>
    </div>
    <!--end::Highlight-->
  </div>
  <!--end::Block-->
</div>
