  <h1 class="anchor fw-bold mb-5" id="class-if" data-kt-scroll-offset="100">
    <a href="#class-if"></a>classIf
  </h1>
  <!--end::Heading-->
  <!--begin::Block-->
  <div class="py-5">Set the CSS classes if the condition is true.</div>
  <!--end::Block-->
  <!--begin::Block-->
  <div class="my-5">
    <!--begin::Heading-->
    <h5 class="py-2 mb-0">Parameters:</h5>
    <!--end::Heading-->
    <!--begin::Parameters-->
    <ul>
      <li class="py-2"><code>expression: boolean</code>
        <!--begin::Block-->
        <div class="pt-3">
          Condition to be checked.
        </div>
        <!--end::Block-->
      </li>
      <li class="py-2"><code>clazz: string</code>
        <!--begin::Block-->
        <div class="pt-3">
          CSS class to set if the condition is true.
        </div>
        <!--end::Block-->
      </li>
    </ul>
    <!--end::Parameters-->
    <!--begin::Highlight-->
    <div class="highlight">
      <button class="highlight-copy btn" data-bs-toggle="tooltip" title="Copy code">copy</button>
      <div class="highlight-code">
        <pre class="language-javascript">
          <code class="language-javascript">// results in: foo
hbs.compile(&quot;\{{classIf expression &#039;foo&#039;}}&quot;)({&quot;expression&quot;:true});</code>
        </pre>
      </div>
    </div>
    <!--end::Highlight-->
  </div>
  <!--end::Block-->
</div>
